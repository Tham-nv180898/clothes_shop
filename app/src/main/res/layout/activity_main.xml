<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8EF1E8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_image1"
            android:drawableTop="@drawable/ic_t_shirt"
            android:drawablePadding="10dp"
            android:elevation="8dp"
            android:paddingTop="20dp"
            android:text="T-shirt" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_image2"
            android:drawableTop="@drawable/ic_skirt"
            android:drawablePadding="10dp"
            android:elevation="8dp"
            android:paddingTop="20dp"
            android:text="Skirt" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_3"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_image3"
            android:drawableTop="@drawable/ic_sweater"
            android:drawablePadding="10dp"
            android:elevation="8dp"
            android:paddingTop="20dp"
            android:text="Sweater" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_image4"
            android:drawableTop="@drawable/ic_coat"
            android:drawablePadding="10dp"
            android:elevation="8dp"
            android:paddingTop="20dp"
            android:text="Coat" />

    </LinearLayout>


</LinearLayout>